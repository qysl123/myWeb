<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>CXFServer</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:spring-config.xml</param-value>
	</context-param>
	
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<servlet>
      <servlet-name>RSANotifyReceiver</servlet-name>
      <servlet-class>com.yc.eps.alipay.NotifyReceiverServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
    </servlet>
	<servlet>
      <servlet-name>UniNotifyServlet</servlet-name>
      <servlet-class>com.yc.eps.unipay.UniNotifyServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
    </servlet>
	<servlet>
		<servlet-name>TrustPayNotifyServlet</servlet-name>
		<servlet-class>com.yc.eps.trustpay.TrustPayNotifyServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
      <servlet-name>WeixinNotifyServlet</servlet-name>
      <servlet-class>com.yc.eps.weixin.WeixinNotifyServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
    </servlet>

	<servlet-mapping> 
		<servlet-name>RSANotifyReceiver</servlet-name> 
		<url-pattern>/servlet/MoneyReceiver</url-pattern>
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>UniNotifyServlet</servlet-name> 
		<url-pattern>/servlet/UniNotifyServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TrustPayNotifyServlet</servlet-name>
		<url-pattern>/servlet/TrustPayNotifyServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>WeixinNotifyServlet</servlet-name> 
		<url-pattern>/servlet/WeixinNotifyServlet</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
